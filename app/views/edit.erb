<h1>Edit <%="#{@artist.name}"%></h1>

<form method="POST" action='<%="/artist/#{@artist.id}"%>'>
    <input type="hidden" name="_method" value="PATCH">
    <br>
    <label for="name">Name</label>
    <input type="text" 
    name="artistInfo[name]" 
    id="name"
    value=<%="#{@artist.name}"%>>

    <br>
    <br>
    <label for="age">Age</label>
    <input type="integer" 
    name="artistInfo[age]" 
    id="age"
    value=<%="#{@artist.age}"%>>

    <br>
    <br>
    <label for="bio">Bio</label>
    <input type="text" 
    name="artistInfo[bio]" 
    id="bio"
    value=<%="#{@artist.bio}"%>>

    <br>
    <br>
    <input type="submit" value="Update an artist!">
</form>